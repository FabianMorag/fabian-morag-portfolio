---
import { PROJECTS } from '@/contants/projects.ts'
---

<section id="projects" class="px-4 py-24">
  <div class="m-auto max-w-5xl">
    <h2 class="mb-12 font-bold text-4xl md:text-5xl text-center">Proyectos</h2>
    <div class="gap-6 grid">
      {
        PROJECTS.map(({ name, img, description, siteUrl, srcCodeUrl, mainBtn, secBtn }) => (
          <article class="glass card sm:card-side">
            <figure>
              <img src={img} alt="Imagen de la aplicaciÃ³n" class="max-w-full max-h-64 object-contain" />
            </figure>
            <div class="card-body">
              <h3 class="card-title">{name}</h3>
              <p>{description}</p>
              <div class="flex justify-end card-actions">
                <a href={siteUrl} target="_blank" class="sm:flex-initial flex-1 btn btn-primary">
                  {mainBtn}
                  <span class="size-5 icon-[iconamoon--link-external]" />
                </a>
                <a href={srcCodeUrl} target="_blank" class="btn-outline btn">
                  {secBtn}
                  <span class="size-5 icon-[mdi--github]" />
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
