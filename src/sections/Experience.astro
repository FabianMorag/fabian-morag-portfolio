---
import EXPERIENCE from '@/contants/experience.ts'
---

<section class="px-4 py-24">
  <div class="mx-auto max-w-5xl">
    <h2 class="mb-12 font-bold text-4xl md:text-5xl text-center">Experiencia</h2>
    <ul class="timeline-snap-icon timeline timeline-compact timeline-vertical">
      {
        EXPERIENCE.map(({ role, company, description, startDate, endDate }) => (
          <li>
            <div class="timeline-middle">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <div class="mb-10 p-6 rounded-2xl timeline-start glass">
              <div class="w-full md:w-1/4 md:text-lg text-nowrap text:sm">
                <time class="font-mono italic" datetime={startDate.dateTime}>
                  {startDate.textTime}
                </time>{' '}
                -{' '}
                <time class="font-mono italic" datetime={endDate.dateTime}>
                  {endDate.textTime}
                </time>
              </div>
              <h3 class="font-black text-lg">
                {company} - {role}
              </h3>
              <ul class="pl-4 text-sm md:text-base list-disc">
                {description.map(item => (
                  <li class="mb-1">{item}</li>
                ))}
              </ul>
            </div>
            <hr />
          </li>
        ))
      }
    </ul>
  </div>
</section>

<section id="experience" class="px-4 py-24">
  <div class="mx-auto max-w-5xl">
    <h2 class="mb-12 font-bold text-4xl md:text-5xl text-center">Experiencia</h2>
    <div class="flex flex-col gap-6">
      {
        EXPERIENCE.map(({ role, company, description, startDate, endDate }) => (
          <article class="flex md:flex-row flex-col gap-4 bg-white shadow-md shadow-slate-300 px-6 md:px-8 py-8 rounded-3xl">
            <div class="w-full md:w-1/4 md:text-lg text-nowrap text:sm">
              <time datetime={startDate?.dateTime}>{startDate.textTime}</time> -{' '}
              <time datetime={endDate?.dateTime}>{endDate.textTime}</time>
            </div>
            <div class="w-full md:w-3/4">
              <h3 class="mb-4 font-semibold text-amber-700 text-lg md:text-xl">
                {role} - {company}
              </h3>
              <ul class="[&>li]:mb-1 pl-4 text-slate-600 text-sm md:text-base list-disc">
                {description.map(item => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
